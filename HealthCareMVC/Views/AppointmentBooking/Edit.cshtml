
@model AppointmentBookingViewModel
@{
    ViewData["Title"] = "Edit";
}
<body>
    <div class="container offset-4 pt-5">
        <h1>Edit Appointment</h1>
        <form asp-controller="AppointmentBooking" asp-action="Edit" method="post">
            <div class="row">
                <div class="col-md-4">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="mb-2 ">
                        <label asp-for="PatientName" class="form-label"></label>
                        <input type="text" asp-for="PatientName" class="form-control" />
                        <span asp-validation-for="PatientName"></span>
                    </div>
                    <div class="mb-2 ">
                        <label asp-for="Age" class="form-label"></label>
                        <input type="text" asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age"></span>
                    </div>
                    <div class="mb-2 ">
                        <label asp-for="HealthIssue" class="form-label"></label>
                        <input type="text" asp-for="HealthIssue" class="form-control" />
                        <span asp-validation-for="HealthIssue"></span>
                    </div>
                    <div class="mb-2 ">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input type="text" asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber"></span>
                    </div>
                    <div class="mb-2">
                        <label asp-for="Date" class="form-label"></label>
                        <input type="date" asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date"></span>
                    </div>
                    <div class="mb-2">
                        <label asp-for="Time" class="form-label"></label>
                        <input type="time" asp-for="Date" class="form-control" />
                        <span asp-validation-for="Time"></span>
                    </div>
                    <div class="mb-2">
                        <label asp-for="DocSpecializationId" class="form-label"></label>
                        <input type="text" asp-for="DocSpecializationId" class="form-control" />
                        <span asp-validation-for="DocSpecializationId"></span>
                    </div>
                    <div class="mt-2" d-grid>
                        <input type="submit" class="btn btn-primary" value="Update Customer" />
                    </div>
                </div>
            </div>

        </form>
        <a asp-controller="AppointmentBooking" asp-action="index" class="btn btn-dark" >Back</a>

    </div>
</body>