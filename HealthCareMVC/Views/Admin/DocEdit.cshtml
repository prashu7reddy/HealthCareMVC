



@model DoctorViewModel
@{
    ViewData["Title"] = "DocEdit";
}


<body>
    <div class="container offset-4 pt-5">
        <h1>Edit Doctor</h1>

        <form asp-controller="Doctor" asp-action="Edit" method="post">
            <div class="row">
                <div class="col-md-4">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="mb-2">
                        <label asp-for="DoctorName" class="form-label"></label>
                        <input type="text" asp-for="DoctorName" class="form-control" />
                        <span asp-validation-for="DoctorName"></span>
                    </div>
                    <div class="mb-2">
                        <label asp-for="DocSpecializationId" class="form-label"></label>
                        <select asp-for="DocSpecializationId" asp-items="@(new SelectList(Model.Specializations,"Id","SpecializationName"))" class="form-select">
                            <option>--Select--</option>
                        </select>
                        <span asp-validation-for="DocSpecializationId"></span>
                    </div>
                    <div class="mb-2">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input type="text" asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber"></span>
                    </div>
                    <div class="mb-2">
                        <label asp-for="EmailId" class="form-label"></label>
                        <input type="email" asp-for="EmailId" class="form-control" />
                        <span asp-validation-for="EmailId"></span>
                    </div>
                    <div class="mt-2" d-grid>
                        <input type="submit" class="btn btn-primary" value="Update Customer" />
                    </div>
                </div>
            </div>

        </form>
    </div>
</body>