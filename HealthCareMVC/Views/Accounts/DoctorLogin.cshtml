


@model LoginViewModel
@{
    ViewData["Title"] = "DoctorLogin";
}

<h1 class="text-center box-shadow offset-sm-5">Doctor Login </h1>


<div class="container">
    <div class="row">
        <div class="col-md-10 offset-1">
            <div class="row">
                <div class="col-md-5 align-content-xxl-start offset-0">
                    <img src="https://th.bing.com/th/id/R.f7207eed3196cf478919772facd66b7a?rik=3FImnidyjiSK9A&riu=http%3a%2f%2fwww.hfcgrupo.es%2fwp-content%2fuploads%2f2017%2f06%2fmedicos.png&ehk=nuE%2fj%2bATTN9ty6GX5BKv3tDjHPYV7GqzAHFIrL1fKec%3d&risl=&pid=ImgRaw&r=0" width="400" height="400" />
                </div>
                <div class="col-md-4 align-content-xl-end border border-black shadow-lg rounded pl-5 pr-5 pb-3 offset-2">
                    <form asp-controller="Accounts" asp-action="DoctorLogin" method="post">
                        <div class="row">
                            <div class="form-group pl-4">
                                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                                <div class="col mb-2 pt-3 form-group">
                                    <label asp-for="Username" class="form-label"></label>
                                    <input type="text" asp-for="Username" placeholder="Enter User Name" class="form-control" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="col mb-2 pt-3 form-group">
                                    <label asp-for="Password" class="form-label"></label>
                                    <input type="password" asp-for="Password" placeholder="Enter Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                @*<div class="col mb-2 pt-3 form-group">
                                    <input type="checkbox" asp-for="IsRemember" value="Sign In" />
                                    <label asp-for="IsRemember"> </label>

                                </div>*@
                                <div class="col mb-2 pt-3 form-group">
                                    <input type="submit" class="btn  btn-primary " style="width:100%" value="Sign In" />
                                </div>
                                <!--<div class="col mb-2 text-center">-->
                                @* <a class="text-primary" asp-action="ForgotUsername">Forgot Username?</a>*@
                                <!--<a class="text-primary" asp-action="ForgotPassword">Forgot Password</a>
                                </div>-->
                                @*<div class="col mb-2 text-left">
                                        <a class="text-light  btn btn-primary "  asp-action="SignUp" asp-controller="Accounts"> Sign Up</a>
                                    </div>*@
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
