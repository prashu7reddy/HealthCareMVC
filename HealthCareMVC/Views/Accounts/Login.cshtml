@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center box-shadow offset-sm-5"> Login </h1>


<div class="container">
    <div class="row">
        <div class="col-md-10 offset-1">
            <div class="row">
                <div class="col-md-5 align-content-xxl-start offset-0">
                    <img src="https://www.dratulagra.com/assets/img/login-banner.png" width="400" height="400" />
                </div>
                <div class="col-md-4 align-content-xl-end border border-dark shadow-lg rounded pl-5 pr-5 pb-3 offset-2">
                    <form asp-controller="Accounts" asp-action="Login" method="post">
                        <div class="row">
                            <div class="form-group pl-4">
                                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                                <div class="form-group">
                                    <label asp-for="Username" class="form-label"></label>
                                    <input type="text" asp-for="Username" placeholder="Enter User Name" class="form-control" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="form-label"></label>
                                    <input type="password" asp-for="Password" placeholder="Enter Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input type="checkbox" asp-for="IsRemember" value="Sign In" />
                                    <label asp-for="IsRemember"> </label>

                                </div>


                                <div class="form-group">
                                    <input type="submit" class="btn btn-block btn-primary " value="Sign In" />
                                </div>
                                <div class="text-center">
                                    @* <a class="text-primary" asp-action="ForgotUsername">Forgot Username?</a>*@
                                    <a class="text-primary" asp-action="ForgotPassword">Forgot Password</a>


                                </div>

                                <div class="text-left">
                                    <h6 class="text-bg-danger">New Account <a class="text-light  btn btn-primary  " asp-action="SignUp" asp-controller="Accounts"> Sign Up</a></h6>

                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
