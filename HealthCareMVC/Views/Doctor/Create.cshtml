

@model DoctorViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="col offset-4 pt-5 ">
    <h1>Create Doctor Profile</h1>
    <form asp-controller="Doctor" asp-action="Create" method="post">
        <div class="row">
            <div class="col-md-7">
                <div class="mb-2 ">
                    <label asp-for="DoctorName" class="form-label"></label>
                    <input type="text" asp-for="DoctorName" class="form-control" />
                    <span asp-validation-for="DoctorName"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="DocSpecializationId" class="form-label"></label>
                    <select asp-for="DocSpecializationId" asp-items="@(new SelectList(Model.Specializations,"Id","SpecializationName"))" class="form-select">
                        <option>--Select--</option>
                    </select>
                    <span asp-validation-for="DocSpecializationId"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input type="text" asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="EmailId" class="form-label"></label>
                    <input type="text" asp-for="EmailId" class="form-control" />
                    <span asp-validation-for="EmailId"></span>
                </div>
            
                <div class="mt-2 d-grid">
                    <input type="submit" class="btn btn-primary" value="Add New" />
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}